			<configuration type="*"
				parser="DummyFilePairParser"
				analyser="DummyFilePairAnalyser" />
		</interpreter>

	</interpreters>
	
	<monitors>
		<monitor id="monitor-dummy" datasource="datasource-dummy" interpreter="interpreter-dummy"
			index="index-dummy" />
	</monitors>
	
</config>